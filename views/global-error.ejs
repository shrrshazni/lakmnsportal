<%- include('partials/public-header') %>

<div class="px-3">
  <div class="row min-vh-100 flex-center p-5">
    <div class="col-12 col-xl-10 col-xxl-8">
      <div class="row justify-content-center g-5">
        <div class="col-12 col-lg-6 text-center order-lg-1">
          <img class="img-fluid w-lg-100 d-light-none" src="../../assets/img/spot-illustrations/500-illustration.png" alt="Error Image" width="400" />
          <img class="img-fluid w-md-50 w-lg-100 d-dark-none" src="../../assets/img/spot-illustrations/dark_500-illustration.png" alt="Error Image" width="540" />
        </div>
        <div class="col-12 col-lg-6 text-center text-lg-start">
          <img class="img-fluid mb-6 w-50 w-lg-75 d-dark-none" src="../../assets/img/spot-illustrations/500.png" alt="Error Icon" />
          <img class="img-fluid mb-6 w-50 w-lg-75 d-light-none" src="../../assets/img/spot-illustrations/dark_500.png" alt="Error Icon" />
          <h2 class="text-body-secondary fw-bolder mb-3"><%= errorMessage %></h2>
          <% if (error) { %>
          <p class="text-danger"><%= error %></p> <!-- Show additional error details if available -->
          <% } %>
          <p class="text-body mb-5">But relax! Our cat is here to play you some music.</p>
          <a class="btn btn-lg btn-primary" href="/">Go Home</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/public-footer.ejs') %>