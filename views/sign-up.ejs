<%- include("partials/public-header.ejs") %>

<div class="row vh-100 g-0">
  <div class="col-lg-6 position-relative d-none d-lg-block">
    <div class="bg-holder" style="background-image:url(../../../assets/img/bg/32.png);">
    </div>
    <!--/.bg-holder-->

  </div>
  <div class="col-lg-6">
    <div class="row flex-center h-100 g-0 px-4 px-sm-0">
      <div class="col col-sm-6 col-lg-7 col-xl-6"><a class="d-flex flex-center text-decoration-none mb-2" href="/">
          <div class="d-flex align-items-center fw-bolder fs-3 d-inline-block"><img src="../../../assets/img/icons/logo.png" alt="phoenix" width="58" />
          </div>
        </a>

        <div class="text-center mb-1">
          <h3 class="text-body-highlight">Sign Up</h3>
          <p class="text-body-tertiary">Create staff account today</p>
        </div>

        <form action="/sign-up" method="post" class="needs-validation row g-2" novalidate="novalidate">
          <div class="mb-3 text-start">
            <label class="form-label" for="username">Username</label>
            <div class="input-group">
              <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
              <input class="form-control" id="username" name="username" type="text" placeholder="Username" required="" />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">This is required</div>
            </div>
          </div>

          <div class="position-relative mt-1">
            <hr class="bg-200" />
          </div>

          <div class="text-start">
            <label class="form-label" for="name">Full Name</label>
            <input class="form-control" id="name" name="fullname" type="text" placeholder="Name" required="" />
            <!-- validations -->
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This is required</div>
          </div>

          <div class=" text-start">
            <label class="form-label" for="email">Email address</label>
            <input class="form-control" id="email" type="email" name="email" placeholder="name@example.com" required="" />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This is required</div>
          </div>

          <div class="col-sm-12">
            <label class="form-label" for="password">Password</label>

            <div class="container px-0">
              <input class="form-control form-icon-input" id="password" name="password" type="password" placeholder="Password" required="" />
              <span type="button" class="position-absolute end-0 top-0 mt-2 me-3" id="togglePassword">
                <i class="fa fa-eye-slash" aria-hidden="true" width="15" height="15"></i>
              </span>
            </div>

            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This is required</div>

            <script>
              document.getElementById("togglePassword").addEventListener("click", function() {
                var passwordInput = document.getElementById("password");
                if (passwordInput.type === "password") {
                  passwordInput.type = "text";
                  this.innerHTML = '<i class="fa fa-eye" aria-hidden="true"  width="15" height="15"></i>';
                } else {
                  passwordInput.type = "password";
                  this.innerHTML = '<i class="fa fa-eye-slash" aria-hidden="true"  width="16.5" height="16.5"></i>';
                }
              });
            </script>
          </div>

          <div class="col-sm-6">
            <label class="form-label" for="grade">Grade</label>
            <input class="form-control form-icon-input" id="grade" name="grade" type="text" placeholder="Grade" required="" />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This is required</div>
          </div>

          <div class="col-sm-6">
            <label class="form-label" for="class">Classification</label>
            <select class="form-select" id="class" required aria-label="leave selection" name="class">
              <option value="">Select classification</option>
              <option value="permanent">Permanent</option>
              <option value="contract">Contract</option>
              <option value="trainee">Trainee</option>
              <option value="intern">Intern</option>
            </select>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This is required</div>
          </div>

          <div class="col-sm-6">
            <label class="form-label" for="phone">Department</label>
            <input class="form-control form-icon-input" id="department" name="department" type="text" placeholder="Department" required="" />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This is required</div>
          </div>

          <div class="col-sm-6">
            <label class="form-label" for="phone">Section</label>
            <input class="form-control form-icon-input" id="section" name="section" type="text" placeholder="Section" />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This is required</div>
          </div>

          <div class="col-sm-6 mb-4">
            <label class="form-label" for="phone">Position</label>
            <input class="form-control form-icon-input" id="position" name="position" type="text" placeholder="Position" required="" />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This is required</div>
          </div>

          <div class="col-sm-6 mb-4">
            <label class="form-label" for="gender">Gender</label>
            <select class="form-select" id="gender" required aria-label="leave selection" name="gender">
              <option value="">Select gender</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
            </select>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This is required</div>
          </div>

          <button class="btn btn-primary w-100 mb-3" type="submit" name="submit">Sign up</button>
          <div class="text-center">
            <a class="fs-9 fw-bold" href="/">Sign in to an existing account</a>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>

<!-- theme button -->
<div class="position-absolute top-0 end-0 m-4 d-flex px-2 py-1">
  <div class="theme-control-toggle fa-icon-wait px-2">
    <input class="form-check-input ms-0 theme-control-toggle-input" type="checkbox" data-theme-control="phoenixTheme" value="dark" id="themeControlToggle" />
    <label class="mb-0 theme-control-toggle-label theme-control-toggle-light" for="themeControlToggle" data-bs-toggle="tooltip" data-bs-placement="left" title="Switch theme"><span class="icon" data-feather="moon"></span></label>
    <label class="mb-0 theme-control-toggle-label theme-control-toggle-dark" for="themeControlToggle" data-bs-toggle="tooltip" data-bs-placement="left" title="Switch theme"><span class="icon" data-feather="sun"></span></label>
  </div>
</div>

<!-- toast alert submission -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 5">
  <div class="d-flex">
    <div class="toast <%= show %> align-items-center text-white border-0" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true">
      <div class="d-flex justify-content-between">
        <div class="toast-body px-0 py-3">
          <code class="text-primary"><%= alert %></code>
        </div>

        <button class="btn ms-2 p-0" type="button" data-bs-dismiss="toast" aria-label="Close">
          <span class="uil uil-times fs-7"></span>
        </button>
      </div>
    </div>
  </div>
</div>


<%- include("partials/public-footer.ejs") %>