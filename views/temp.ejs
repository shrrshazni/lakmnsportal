<style>
  /* Hide Google Translate toolbar */
  .VIpgJd-ZVi9od-ORHb-OEVmcd {
    display: none !important;
  }

  body {
    top: 0 !important;
  }
</style>

<div id="google_translate_element"></div>

<script type="text/javascript">
  function googleTranslateElementInit() {
    new google.translate.TranslateElement({
      pageLanguage: 'en',
      layout: google.translate.TranslateElement.InlineLayout.SIMPLE
    }, 'google_translate_element');
  }

  // Function to hide Google Translate toolbar
  function hideGoogleTranslateToolbar() {
    const toolbar = document.querySelector(".VIpgJd-ZVi9od-ORHb-OEVmcd");
    if (toolbar) {
      toolbar.style.display = "none";
    }
    document.body.style.top = "0 !important";
  }

  // Observer to hide toolbar on DOM changes
  const observer = new MutationObserver(hideGoogleTranslateToolbar);
  observer.observe(document.body, {
    childList: true,
    subtree: true
  });

  // Hide toolbar on initial load
  window.addEventListener('load', hideGoogleTranslateToolbar);

  // Reapply styles and hide toolbar after language selection
  document.addEventListener('click', () => {
    setTimeout(() => {
      hideGoogleTranslateToolbar();
    }, 100); // Adjust the delay as needed
  });
</script>

<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

